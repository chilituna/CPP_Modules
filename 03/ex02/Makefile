NAME = frag

CXX = c++
CXXFLAGS = -Wall -Werror -Wextra -std=c++98
# Dependency generation flags:
# -MMD    : Generate dependency files (.d files) for each source file, excluding system headers.
# -MP     : Add phony targets for each header in the dependency files to avoid errors if headers are deleted.
DEPFLAGS = -MMD -MP

SRCS = main.cpp ClapTrap.cpp ScavTrap.cpp FragTrap.cpp

OBJS = $(SRCS:.cpp=.o)
DEPS = $(OBJS:.o=.d)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(DEPFLAGS) -c $< -o $@

# Automatically include dependency files generated by -MMD for each source file.
# The '-' before include prevents make from failing if a dependency file doesn't exist.
# This ensures that changes in headers are detected and the relevant files are recompiled.
-include $(DEPS)

all: $(NAME)

clean:
	rm -f $(OBJS) $(DEPS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re

